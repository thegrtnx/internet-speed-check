{
	"compilerOptions": {
		"jsx": "react",
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist/esm",
		"rootDir": "./src",
		"composite": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
